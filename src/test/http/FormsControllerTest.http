# Ten zasób pozwala utworzyć formularz na wybranym modelu danych.
# W ciele żądania przekazuje się strukturę formularza:
# {
#  "name": "Order task",
#  "type": {
#    "module": "prodactivvity",
#    "name": "Task"
#  },
#  "fields": []
# }
# name = nazwa formularza wprowadzona przez użytkownika
# type = to jest w zasadzie odpowiedź z zasobu: GET http://{{host}}/v1/formModels bez pola "primitive"
# fields = to jest lista pól formularza w strukturze:
# {
#   "label": "Task name",
#   "modelField": {}
# }
# label = nazwa pola wprowadzona przez użytkownika
# modelField = to jest odpowiedź z zasobu pobierania szczegółów danego modelu np.: GET http://{{host}}/v1/formModels/organization/AppUser
POST http://{{host}}/forms
Content-Type: application/json

{
  "name": "Order task",
  "type": {
    "module": "prodactivvity",
    "name": "Task"
  },
  "fields": [
    {
      "label": "Task name",
      "modelField": {
        "name": "name",
        "type": {
          "module": "primitives",
          "name": "String"
        },
        "constraints": [
          "Required"
        ],
        "multiplicity": "SINGULAR"
      }
    },
    {
      "label": "Task Description",
      "modelField": {
        "name": "description",
        "type": {
          "module": "primitives",
          "name": "String"
        },
        "constraints": [],
        "multiplicity": "SINGULAR"
      }
    },
    {
      "label": "Ordered",
      "modelField": {
        "name": "orderedOn",
        "type": {
          "module": "primitives",
          "name": "LocalDateTime"
        },
        "constraints": [],
        "multiplicity": "SINGULAR"
      }
    },
    {
      "label": "Deadline",
      "modelField": {
        "name": "deadline",
        "type": {
          "module": "primitives",
          "name": "LocalDateTime"
        },
        "constraints": [],
        "multiplicity": "SINGULAR"
      }
    },
    {
      "label": "Orderer",
      "modelField": {
        "name": "orderer",
        "type": {
          "module": "organization",
          "name": "AppUser"
        },
        "constraints": [
          "Required",
          "NotInsertable"
        ],
        "multiplicity": "SINGULAR"
      }
    },
    {
      "label": "Performer",
      "modelField": {
        "name": "performer",
        "type": {
          "module": "organization",
          "name": "AppUser"
        },
        "constraints": [
          "Required",
          "NotInsertable"
        ],
        "multiplicity": "SINGULAR"
      }
    },
    {
      "label": "Customer",
      "modelField": {
        "name": "customer",
        "type": {
          "module": "organization",
          "name": "Customer"
        },
        "constraints": [
          "NotInsertable"
        ],
        "multiplicity": "SINGULAR"
      }
    },
    {
      "label": "Project",
      "modelField": {
        "name": "project",
        "type": {
          "module": "prodactivvity",
          "name": "Project"
        },
        "constraints": [],
        "multiplicity": "SINGULAR"
      }
    }
  ]
}

